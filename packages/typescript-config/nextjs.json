{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "plugins": [{ "name": "next" }],
    "strictNullChecks": true
  }
}
